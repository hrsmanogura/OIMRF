@{
    ViewData["Title"] = "Reports";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container py-4">
    <h3 class="mb-4 fw-bold text-dark">Dashboard</h3>

    <div class="row g-4">
        <!-- Complaints vs Resolved -->
        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-white fw-semibold">Complaints vs Resolved by Region</div>
                <div class="card-body">
                    <canvas id="regionChart" height="180"></canvas>
                </div>
            </div>
        </div>

        <!-- Root Causes -->
        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-white fw-semibold">Root Cause Analysis</div>
                <div class="card-body">
                    <canvas id="rootCauseChart" height="180"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Time Since Posted -->
    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white fw-semibold">Recent Complaints (Time Since Posted)</div>
        <div class="card-body p-0">
            <table class="table mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Region</th>
                        <th>Complaint</th>
                        <th>Posted</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>NCR</td>
                        <td>Illegal logging incident reported</td>
                        <td>3 hours ago</td>
                    </tr>
                    <tr>
                        <td>Region IV-A</td>
                        <td>River pollution from factory discharge</td>
                        <td>6 hours ago</td>
                    </tr>
                    <tr>
                        <td>Region III</td>
                        <td>Smoke belching vehicle near checkpoint</td>
                        <td>1 day ago</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    new Chart(document.getElementById('regionChart'), {
        type: 'bar',
        data: {
            labels: ['NCR', 'Region IV-A', 'Region III', 'Region VII'],
            datasets: [
                {
                    label: 'Complaints',
                    data: [32, 24, 18, 10],
                    backgroundColor: 'rgba(220, 53, 69, 0.8)'
                },
                {
                    label: 'Resolved',
                    data: [21, 18, 12, 8],
                    backgroundColor: 'rgba(25, 135, 84, 0.8)'
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { position: 'bottom' }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: { stepSize: 5 }
                }
            }
        }
    });

    new Chart(document.getElementById('rootCauseChart'), {
        type: 'doughnut',
        data: {
            labels: [
                'Human Factors (32)',
                'Process Issues (18)',
                'Technical Issues (25)',
                'Environmental Factors (42)',
                'Stakeholder Issues (29)'
            ],
            datasets: [{
                data: [32, 18, 25, 42, 29],
                backgroundColor: [
                    '#dc3545', // red
                    '#fd7e14', // orange
                    '#0d6efd', // blue
                    '#198754', // green
                    '#6f42c1'  // purple
                ]
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'right',
                    labels: { usePointStyle: true }
                }
            }
        }
    });
</script>

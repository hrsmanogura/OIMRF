@* Reports Dashboard UI - Static Layout *@
@{
    ViewData["Title"] = "Reports Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container-fluid py-4">
    <h2 class="mb-4 fw-semibold">Reports Dashboard</h2>

    <!-- Complaint Severity by Entity -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Complaint Severity by Entity</h5>
                    <canvas id="severityChart" height="120"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Region and Agency + Response Time -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">Complaints per Region & Agency</h5>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Region</th>
                                <th>Agency</th>
                                <th>Complaints</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr><td>NCR</td><td>DENR NCR</td><td>42</td></tr>
                            <tr><td>IV-A</td><td>EMB Region 4A</td><td>35</td></tr>
                            <tr><td>VII</td><td>DENR Cebu</td><td>27</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">Response Time by Region</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">NCR - Avg Response: <strong>3 Days</strong></li>
                        <li class="list-group-item">Region IV-A - Avg Response: <strong>12 Hours</strong></li>
                        <li class="list-group-item">Region VII - Avg Response: <strong>1 Day</strong></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Nature of Complaints -->
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Nature of Complaints</h5>
                    <canvas id="natureChart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Complaint Severity Chart
    new Chart(document.getElementById("severityChart"), {
        type: 'bar',
        data: {
            labels: ["DENR NCR", "EMB Region 4A", "DENR Cebu"],
            datasets: [
                {
                    label: "High",
                    backgroundColor: "#d9534f",
                    data: [12, 7, 5]
                },
                {
                    label: "Medium",
                    backgroundColor: "#f0ad4e",
                    data: [9, 14, 10]
                },
                {
                    label: "Low",
                    backgroundColor: "#5bc0de",
                    data: [2, 8, 12]
                }
            ]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Nature of Complaints Pie Chart
    new Chart(document.getElementById("natureChart"), {
        type: 'pie',
        data: {
            labels: ["Environmental", "Waste Management", "Deforestation", "Mining", "Others"],
            datasets: [{
                data: [34, 22, 18, 15, 11],
                backgroundColor: [
                    "#4e73df",
                    "#1cc88a",
                    "#36b9cc",
                    "#f6c23e",
                    "#e74a3b"
                ]
            }]
        }
    });
</script>

@model IEnumerable<OIMRF.Models.AuditTrail>

@{
    ViewData["Title"] = "Audit Trail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />

<div class="card mt-4">
    <div class="card-header">
        <h5 class="mb-0">Audit Trail</h5>
    </div>
    <div class="card-body">
        <table id="auditTable" class="table table-striped table-bordered w-100">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Module</th>
                    <th>Attribute</th>
                    <th>Previous</th>
                    <th>Change</th>
                    <th>Remarks</th>
                    <th>Created By</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CreatedDate?.ToString("g")</td>
                        <td>@item.ModuleName</td>
                        <td>@item.AttributeName</td>
                        <td>@item.Previous</td>
                        <td>@item.Change</td>
                        <td>@item.Remarks</td>
                        <td>@item.CreatedBy</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#auditTable').DataTable({
                pageLength: 25,
                responsive: true,
                order: [[0, 'desc']],
                language: {
                    search: "Search:",
                    lengthMenu: "Show _MENU_ entries",
                    info: "Showing _START_ to _END_ of _TOTAL_ logs",
                    infoEmpty: "No audit records found",
                    emptyTable: "No data available"
                }
            });
        });
    </script>
}
